/* component/tree-node/tree-node.wxss */
@import '../../style/common.wxss';
.tree-node > .tree-node_children{
  padding-left: 50rpx;
  position: relative;
  
}
.tree-node_children  .tree-node_content{
  position: relative;
}
.tree-node_children  .tree-node_content::after{
  content: '';
    width: 40rpx;
    height: 0;
    border-top: 2rpx dashed #d9d9d9;
    position: absolute;
    top: 20rpx;
    left: -40rpx;
}
.tree-node > .tree-node_children::after{
position: absolute;
content: '';
top: 0;
left: 12rpx;
width: 0;
    height: 96%;
border-left: 2rpx dashed #D9D9D9;
}
