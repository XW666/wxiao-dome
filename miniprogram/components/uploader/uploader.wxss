/* component/uploader/uploader.wxss */
.uploader-view{
  display: inline;
}
.uploader-main{
  position: relative;
  border: 2rpx dashed #D9D9D9;
  border-radius: 8px;
}
.uploader-upload-btn{
  width: 100%;
  height: 100%;
}
.uploader-camera-icon{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform:translate(-50%,-50%);
  -webkit-transform:translate(-50%,-50%);
  z-index: 3;
  background:url('https://i.loli.net/2020/12/22/lO36HLecAgmNXGd.png') no-repeat;
  background-size: 100% 100%;
  -webkit-background-size: 100% 100%;
}
.uploader-show-box{
  width: 100%;
  height: 100%;
  position: relative;
}
.uploader-show-box image{
  width: 100%;
  height: 100%;
  display: block;
}
.uploader-del-btn{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  top: -18rpx;
  right:-18rpx;
  background:url('https://i.loli.net/2020/12/23/qUueC3QD9ZTfABm.png') no-repeat;
  background-size: 100% 100%;
  -webkit-background-size: 100% 100%;
}